{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "watch-me",
  "version": "0.1.0",
  "identifier": "me.watch-me.sanket143",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "watch-me",
        "width": 300,
        "height": 100,
        "fullscreen": false,
        "resizable": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "hiddenTitle": true,
        "shadow": false,
        "maximizable": false,
        "visibleOnAllWorkspaces": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
